<h1>Article #<%= @article.id %></h1>
<div class="article">
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>
  <p>
    <strong>Text:</strong>
    <%= @article.text %>
  </p>
</div>

<div class="comments">
  <h2>Comments:</h2>
  <ul>
    <%= render @article.comments %>
  </ul>

  <h3>Add Comment:</h3>
  <%= render 'comments/form' %>
</div>


<br />
<%= link_to 'Edit', edit_article_path(@article) %> <br/>
<%= link_to 'Back to Articles', articles_path %>
